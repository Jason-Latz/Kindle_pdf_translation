FROM node:20-alpine

WORKDIR /app

ENV NODE_ENV=development \
    NEXT_TELEMETRY_DISABLED=1 \
    CHOKIDAR_USEPOLLING=true

COPY frontend/ /app

RUN if [ -f package.json ] && grep -q '"name"' package.json; then npm install; else echo "Skipping npm install (placeholder package.json)"; fi

EXPOSE 3000

CMD ["npm", "run", "dev"]
